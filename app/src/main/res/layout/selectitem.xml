<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--商品編號-->
    <TextView
        android:id="@+id/txt_productIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="@string/txtCancelSelection"
        android:textColor="#61409A"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <!-- 商品名稱 -->
    <TextView
        android:id="@+id/txt_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/txt_productIndex"
        android:layout_marginEnd="30dp"
        android:text="@string/txtFname"
        android:textColor="#61409A"
        android:textSize="23sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_productName"
        android:layout_toEndOf="@+id/txt_productIndex"
        android:orientation="horizontal">

        <!-- 商品價格 -->
        <TextView
            android:id="@+id/txt_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtUnitPrice"
            android:textColor="#6473C5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="textStart"/>

        <!--商品點擊數量-->
        <TextView
            android:id="@+id/txt_product_buy_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtFclickNum"
            android:textColor="#6473C5"
            android:textSize="20sp"/>

        <!-- 商品庫存 -->
        <TextView
            android:id="@+id/txt_productSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtFsum"
            android:textColor="#6473C5"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>