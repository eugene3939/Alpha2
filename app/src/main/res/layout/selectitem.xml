<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/fLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <!-- 商品名稱 -->
        <TextView
            android:id="@+id/txt_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_weight="7"
            android:text="@string/txtFname"
            android:textColor="#61409A"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <!--商品點擊數量-->
        <TextView
            android:id="@+id/txt_product_buy_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="10dp"
            android:text="@string/txtFclickNum"
            android:textColor="#6E5A91"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fLayout"
        android:layout_alignStart="@id/fLayout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_productType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtFCategory"
            android:textColor="#6473C5"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <!-- 商品價格 -->
        <TextView
            android:id="@+id/txt_productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtUnitPrice"
            android:textColor="#6473C5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <!-- 商品庫存 -->
        <TextView
            android:id="@+id/txt_productNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtFstock"
            android:textColor="#6473C5"
            android:textSize="20sp"
            android:textAlignment="center"/>
    </LinearLayout>

</RelativeLayout>