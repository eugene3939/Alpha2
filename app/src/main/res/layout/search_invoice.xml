<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--顯示發票的查詢結果-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtInvoiceResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="項"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtInvoiceBarcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="條碼"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtInvoicePName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品名稱"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtInvoiceAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="數量"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtInvoicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="單價"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtInvoiceDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="折扣"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtInvoiceCountingResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="小計"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>