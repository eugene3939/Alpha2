<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/blue_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textDashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtClerkName"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/SearchBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDashboard"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_searchRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:autofillHints="empty"
                android:hint="@string/txtSearchBarHint"
                android:inputType="text"
                android:textSize="20sp"
                android:textColor="@color/blue_500"
                android:textColorHint="@color/blue_500"/>

            <Button
                android:id="@+id/bt_barcodeScanner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="@string/txtBarcode"
                android:textSize="15sp"
                android:backgroundTint="@color/blue_500"/>

            <Button
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="0.1"
                android:text="@string/txtAddProduct"
                android:textSize="15sp"
                android:textColor="@color/blue_800"
                android:backgroundTint="@color/blue_200"/>

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="0.1"
                android:text="@string/txtClearText"
                android:textSize="15sp"
                android:textColor="@color/blue_800"
                android:backgroundTint="@color/blue_200"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lr_filterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SearchBarLayout"
            android:orientation="horizontal">
            <!-- 商品項次 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text=" "
                android:textColor="@color/blue_500"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <!-- 商品名稱 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtFname"
                android:textColor="@color/blue_500"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <!-- 商品價格 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtUnitPrice"
                android:textColor="@color/blue_500"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <!--商品點擊數量-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtFAmount"
                android:textColor="@color/blue_500"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <!-- 商品庫存 -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/txtSumShopCart"
                android:textColor="@color/blue_500"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 欄位內容 -->
        <GridView
            android:id="@+id/gr_tableProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lr_filterTitle"
            android:layout_above="@+id/lrClerkOpr"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <!--店員常用操作內容-->
        <LinearLayout
            android:id="@+id/lrClerkOpr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnDiscountList">

            <!--會員選項 (非會員就會成會員)-->
            <Button
                android:id="@+id/btnUserFavor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_500"
                android:text="@string/txtUserSettingButton"
                android:textSize="15sp"/>

            <!--現折 (單一商品折扣，輸入折抵金額)-->
            <Button
                android:id="@+id/btnSingleCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_200"
                android:text="現折"
                android:textColor="@color/blue_800"
                android:textSize="15sp"/>

            <!--全折 (所有商品折扣，輸入折抵比例)-->
            <Button
                android:id="@+id/btnMultipleCharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_200"
                android:text="全折"
                android:textColor="@color/blue_800"
                android:textSize="15sp"/>

            <!--更正 (刪除最後一項商品)-->
            <Button
                android:id="@+id/btnMerchantClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue_200"
                android:text="更正"
                android:textColor="@color/blue_800"
                android:textSize="15sp"/>
        </LinearLayout>

        <!-- 確認價格 -->
        <Button
            android:id="@+id/btn_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:text="@string/txtSumShopCart"
            android:textSize="25sp"
            android:backgroundTint="@color/blue_500"/>

        <!--總小計-->
        <TextView
            android:id="@+id/txt_totalDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:visibility="invisible"
            android:text="@string/txtTotalPrice"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <!--自訂常用折價券-->
        <Button
            android:id="@+id/btnDiscountList"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/txtCoupon"
            android:textSize="15sp"
            android:textColor="@color/blue_800"
            android:layout_alignBottom="@+id/txt_totalDollar"
            android:background="@color/blue_200"/>
    </RelativeLayout>

    <!--drawer table test-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/my_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        app:menu="@menu/my_nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>